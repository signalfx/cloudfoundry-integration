#!/bin/bash -e

RUN_DIR=/var/vcap/sys/run/signalfx-firehose-nozzle
LOG_DIR=/var/vcap/sys/log/signalfx-firehose-nozzle
PIDFILE=$RUN_DIR/pid

case $1 in

start)

mkdir -p $RUN_DIR
mkdir -p $LOG_DIR

chown -R vcap:vcap $LOG_DIR

(crontab -l | sed /signalfx.*logrotate/d; cat /var/vcap/jobs/signalfx-firehose-nozzle/config/logrotate.cron) | sed /^$/d | crontab

exec >>$LOG_DIR/signalfx-firehose-nozzle.stdout.log \
    2>>$LOG_DIR/signalfx-firehose-nozzle.stderr.log

source /var/vcap/jobs/signalfx-firehose-nozzle/config/envvars

chpst -u vcap:vcap /var/vcap/packages/signalfx_agent/cloudfoundry-integration &

echo $! > $PIDFILE

;;

stop)
kill -9 `cat $PIDFILE`
rm -f $PIDFILE

;;

*)
echo "Usage: signalfx-firehose-nozzle {start|stop}"

;;

esac
